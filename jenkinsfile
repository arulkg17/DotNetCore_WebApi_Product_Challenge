pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/arulkg17/DotNetCore_WebApi_Product_Challenge.git'
            }
        }
        stage('Build') {
            steps {
                echo 'Building project...'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
            }
        }
    }
}
